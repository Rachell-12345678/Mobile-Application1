<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- The <application> tag must only appear once. -->
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HomeDashboard">

        <!--
            This is your LAUNCHER activity. The app will start on this screen.
            Since you have a LoginActivity, it should be the starting point.
        -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
            This is your main dashboard. It does NOT need to be a launcher
            because you navigate to it after a successful login.
        -->
        <activity
            android:name=".Home"
            android:exported="false" />

        <!-- All other activities in your app. They are not exported because
             they are only launched from within your app. -->
        <activity
            android:name=".Bank"
            android:exported="false" />
        <activity
            android:name=".Ideas"
            android:exported="false" />
        <activity
            android:name=".Add"
            android:exported="false" />
        <activity
            android:name=".Links"
            android:exported="false" />
        <activity
            android:name=".Wifi"
            android:exported="false" />

    </application>

</manifest>
